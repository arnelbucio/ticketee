<%= form_for [:admin, @state] do |f| %>
  <% if @state.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@state.errors.count, "error") %>
      prohibited this ticket from being saved:</h2>

    <ul>
      <% @state.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <%= f.submit %>
<% end %>
